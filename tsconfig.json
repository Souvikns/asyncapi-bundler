{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "./src",
    "target": "ES2017",
    "types": [
      "node", "jest"
    ],
    "lib": [
      "esnext",
    ],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "src"
  ]
}
